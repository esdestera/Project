
@model WebApplication.Models.TransactionHistoryViewModel

@{

}
<style>


    tr.d {
        background: #e6e6ff;
        margin: 5px;
        text-align: center;
    }

    [class^=arr-] {
        border: solid black;
        border-width: 0 .2em .2em 0;
        display: inline-block;
        padding: .20em;
    }

    .arr-right {
        transform: rotate(-45deg);
        -webkit-transform: rotate(-45deg);
    }

    .arr-left {
        transform: rotate(135deg);
        -webkit-transform: rotate(135deg);
    }

    table.t {
        border-collapse: collapse;
        width: 100%;
    }
</style>

<h2 align="center">Transactions history</h2>
<table class="table">
    <tr>
        <th>
            Date
        </th>
        <th>
            Balance
        </th>
        <th>
            Sender iban
        </th>
        <th>
            Sender currency
        </th>
        <th>
            Receiver iban
        </th>
        <th>
            Receiver currency
        </th>
        <th>
            Type
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Transactions)
    {
       
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SenderIban)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SenderCurrency)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReceiverIban)
        </td>
        <td>

            @Html.DisplayFor(modelItem => item.ReceiverCurrency)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>

    </tr>
    }
</table>

      